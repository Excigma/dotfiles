[bar/bar]
height = 28
width = 100%
bottom = false
background = ${colors.background}

font-0=JetbrainsMono Nerd Font Mono:size=11;2
font-1=Twemoji:scale=7

module-margin = 1
modules-left = powermenu bspwm polywins
modules-center = time
modules-right = xkeyboard network temperature cpu memory pulseaudio do_not_disturb

wm-restack = bspwm
override-redirect = false

tray-position = right
tray-padding = 10

line-size = 1

[module/powermenu]
type = custom/menu

format-spacing = 1
format-prefix = "  "

label-open = 漣
label-open-foreground = ${colors.blue}
label-close = 
label-close-foreground = ${colors.blue}
label-separator = |
label-separator-foreground = ${colors.blue}

menu-0-0 = 
menu-0-0-exec = systemctl poweroff
menu-0-1 = 勒
menu-0-1-exec = systemctl reboot
menu-0-2 = 
menu-0-2-exec = alacritty
menu-0-3 = 爵
menu-0-3-exec = xdg-open about:newtab
menu-0-4 = 
menu-0-4-exec = onboard

[module/xkeyboard]
type = internal/xkeyboard
format = <label-indicator> 

format-foreground = ${colors.red}
label-indicator-on-capslock =  %name%
